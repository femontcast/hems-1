from flask import Flask, request

app = Flask(__name__)

@app.route("/data")
def get_data():
    temp = request.args.get("temp")
    hum  = request.args.get("hum")
    print(f"🌡️ Temp: {temp} °C | 💧 Hum: {hum} %")
    return "OK", 200

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
